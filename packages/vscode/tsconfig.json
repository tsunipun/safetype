{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "dist",
        "rootDir": "..",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@safetype/core": [
                "../core/src/index.ts"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}