{
    "name": "safetype-vscode",
    "displayName": "SafeType",
    "description": "Prevent accidental leaks of sensitive information (API keys, emails, passwords, etc.)",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/safetype/safetype.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "publisher": "safetype",
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "SafeType",
            "properties": {
                "safetype.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable SafeType confidential data detection."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile:build",
        "compile": "node esbuild.js --watch",
        "compile:build": "node esbuild.js --production",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "18.x",
        "@types/vscode": "^1.74.0",
        "esbuild": "^0.27.3",
        "eslint": "^8.28.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@safetype/core": "*"
    }
}